{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
{% endblock %}

{% block body %}

<style>
body{
    margin:0;
    padding:0;
    background:#1d3b57;
    color:#fff;
    font-family: "Playfair Display", serif;
    background:#134f5c;
}

.btn{
    padding: 10px 30px;
    margin-top:10px;
    cursor:pointer;
    background:#084276;
    color:#fff;
    font-family: "Playfair Display", serif;
    font-size:1em;
    border:none;
    transition: background 0.5s ease;

    &:hover{
        background:#23649e;
    }
}

.form-wrapper{
    background:#6b8f23;
    width:500px;
    position:fixed;
    top:50%;
    left:50%;
    transform:translate(-50%, -50%);
    padding:30px;
    border-radius:5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.9)
}

.form-group{
     display:flex;
     justify-content:space-between;
     margin-bottom:10px;
}

.form_widget{
    width:70%;
    padding:5px;
    border-radius:5px;
    outline-color:blue;
}
.form_widget_roles{
    width:73%;
    padding:5px;
    border-radius:5px;
    outline-color:blue;
}
</style>
<div class = "form-wrapper">

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <h1>Register</h1>

    

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}

                <div class = "form-group">
                    {{ form_label(registrationForm.email, null, {'attr': {'class': 'form_label'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form_widget'}}) }}
                </div>

                <div class = "form-group">
                    {{ form_label(registrationForm.plainPassword.first, null, {'attr': {'class': 'form_label'}}) }}
                    {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form_widget'}}) }}
                 </div>


                <div class = "form-group">
                    {{ form_label(registrationForm.plainPassword.second, null, {'attr': {'class': 'form_label'}}) }}
                    {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form_widget'}}) }}
                </div>

                 <div class = "form-group">
                    {{form_label(registrationForm.roles, null, {'attr': {'class': 'form_label'}} )}}
                    {{form_widget(registrationForm.roles, {'attr': {'class': 'form_widget_roles'}} )}}
                </div>

                    {{ form_label(registrationForm.agreeTerms) }}
                    {{ form_widget(registrationForm.agreeTerms) }} <br>
                 
                <button type="submit" class="btn">Register</button>



                <div class="text-danger">
                    {% if registrationForm.email.vars.errors is not empty %}
                        {{ registrationForm.email.vars.errors|first.message }}
                    {% endif %}
                </div>
                
            {{ form_end(registrationForm) }}

    </div>
{% endblock %}
